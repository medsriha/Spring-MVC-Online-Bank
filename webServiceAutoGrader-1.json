{
  "config": {
    "target": "http://localhost:8080",
    "phases": [
      {"duration": 5, "arrivalCount": 100}
    ],
    "payload": [
    {
      "path": "UserData.csv",
      "fields": ["fname","lname","address","city","state","zip","email","username", "password"],
      "order": "sequence"
    },
    {
      "path": "deposit.csv",
      "fields": ["cash"],
      "order": "sequence"
    },
    {
      "path": "Portfolio.csv",
      "fields": ["name","symbol","initial_value"],
      "order": "sequence"
    },
    {
      "path": "buyFund.csv",
      "fields": ["cashValue"],
      "order": "sequence"
    }
  ]
  },
  "scenarios": [
    {
      "name": "web service task auto grader",
      "flow": [
       {"post": {
         "url": "/login",
         "json": {"username":"jadmin","password":"admin"},
         "match":{
           "json":"$.message",
           "value":"Welcome Jane"
            }
          }
        },
        {"post": {
            "url": "/logout",
            "match":{
              "json":"$.message",
              "value":"You have been successfully logged out"
            }
           }
         },
         {"post": {
           "url": "/createCustomerAccount",
           "json": {"fname":"{{{fname}}}", "lname":"{{lname}}", "address":"{{{address}}}","city":"{{{city}}}","state":"{{{state}}}", "zip":"{{{zip}}}", "email":"{{{email}}}","cash":"0","username":"{{{username}}}","password":"{{password}}"},
           "match":{
             "json":"$.message",
             "value":"You are not currently logged in"
           }
          }
        },
        {"post": {
          "url": "/login",
          "json": {"username":"jadmin","password":"admin"},
          "match":{
            "json":"$.message",
            "value":"Welcome Jane"
             }
           }
         },
       {"post": {
         "url": "/createCustomerAccount",
         "json": {"fname":"{{{fname}}}", "lname":"{{lname}}", "address":"{{{address}}}","city":"{{{city}}}","state":"{{{state}}}", "zip":"{{{zip}}}", "email":"{{{email}}}","cash":"0","username":"{{{username}}}","password":"{{password}}"},
         "match":{
           "json":"$.message",
           "value":"{{{fname}}} was registered successfully"
         }
        }
      },

      {"post": {
              "url": "/createFund",
              "json": {"name":"{{{name}}}", "symbol":"{{{symbol}}}", "initial_value":"{{{initial_value}}}"},
              "match":{
                "json":"$.message",
                "value":"The fund was successfully created"
                 }
               }
             },
      {"post": {
        "url": "/depositCheck",
        "json": {"username":"{{{username}}}", "cash":"{{{cash}}}"},
        "match":{
          "json":"$.message",
          "value":"The check was successfully deposited"
        }
       }
     },


       {"post": {
         "url": "/login",
         "json": {"username":"{{{username}}}","password":"{{password}}"},
         "match":{
           "json":"$.message",
           "value":"Welcome {{{fname}}}"
         }
        }
      },
      {"post": {
        "url": "/buyFund",
        "json": {"symbol":"{{{symbol}}}", "cashValue":"{{{cashValue}}}"},
        "match":{
          "json":"$.message",
          "value":"The fund has been successfully purchased"
           }
         }
       },

       {"get": {
         "url": "/viewPortfolio",
         "match":{
           "json":"$.funds[0].name",
           "value":"{{{name}}}"
            }
          }
        }
     ]
    }
  ]
}
